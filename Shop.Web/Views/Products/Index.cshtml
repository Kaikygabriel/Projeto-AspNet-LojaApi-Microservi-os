@model IEnumerable<Shop.Web.Products.Models.ProductViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Produtos</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f5f5;
            padding: 30px;
        }

        .product-card {
            width: 18rem;
            border-radius: 20px;
            transition: transform .2s;
        }

        .product-card:hover {
            transform: scale(1.03);
        }

        .product-img {
            border-radius: 20px 20px 0 0;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    
    <div class="container">
        <h2 class="text-center mb-4 fw-bold">Produtos</h2>
        <h2 class="text-center mb-4 fw-bold ">
            <a asp-controller="Products"
               asp-action="Create"
               class="btn btn-outline-secondary ">
                Criar Produto
            </a> 
            <a asp-controller="Products"
               asp-action="Delete"
               class="btn btn-outline-secondary ">
                Deletar Produto
            </a> 
        </h2>  
        <div class="row justify-content-center g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-sm-6 d-flex justify-content-center">
                    <div class="card shadow-sm border-0 product-card">
                        <img src="@product.ImageUrl" class="card-img-top product-img" alt="@product.Name" />

                        <div class="card-body">
                            <h5 class="card-title fw-semibold">@product.Name</h5>
                            <p class="card-text text-muted" style="font-size: 0.95rem;">
                                @product.Description
                            </p>

                            <p class="text-success fw-bold fs-5">R$ @product.Price.ToString("F2")</p>

                            <a class="btn btn-primary w-100 fw-bold">Adicionar ao carrinho</a>
                        </div>
                        <a asp-controller="Products"
                           asp-action="GetById"
                           asp-route-id="@product.Id"
                           class="btn btn-outline-secondary ">
                            Ver detalhes
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
