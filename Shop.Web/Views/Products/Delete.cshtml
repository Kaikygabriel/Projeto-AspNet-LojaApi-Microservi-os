@model Shop.Web.Products.Models.ProductViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@Model.Name - Detalhes</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f5f5;
            padding: 40px;
        }

        .product-container {
            background: #fff;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .product-image {
            width: 100%;
            border-radius: 16px;
            height: 350px;
            object-fit: cover;
        }

        .price-tag {
            font-size: 2rem;
            font-weight: bold;
            color: #28a745;
        }

        .btn-buy {
            padding: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 12px;
        }
    </style>
</head>

<body>

<div class="container" >
    <div class="product-container row g-4" style="margin-top: 20px">

        <!-- Imagem -->
        <div class="col-md-5">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image shadow-sm" />
        </div>

        <!-- Informações -->
        <div class="col-md-7">
            <h2 class="fw-bold mb-3">@Model.Name</h2>

            <p class="text-muted fs-5">@Model.Description</p>

            <div class="mt-4">
                <span class="price-tag">R$ @Model.Price.ToString("F2")</span>
            </div>

            <p class="mt-2 text-muted">
                <strong>Estoque:</strong> @Model.Stock unidades
            </p>

            <div class="mt-4 d-flex gap-3">
                <button class="btn btn-primary btn-buy w-50 bg-danger" 
                        asp-controller="Products" asp-action="Delete"  >Deletar</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>
