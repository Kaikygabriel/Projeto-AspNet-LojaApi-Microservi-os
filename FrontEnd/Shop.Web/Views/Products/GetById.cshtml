@model Shop.Web.Products.Models.ProductViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@Model.Name - Detalhes</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ProductGetById.css" />
</head>

<body>

<div class="container">
    <div class="product-container row align-items-center g-4 mt-4">

        <!-- Imagem -->
        <div class="col-md-5">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image shadow-sm" />
        </div>

        <!-- Informações -->
        <div class="col-md-7">
            <h2 class="fw-bold mb-3">@Model.Name</h2>

            <p class="text-muted fs-5">@Model.Description</p>

            <div class="mt-4">
                <span class="price-tag">R$ @Model.Price.ToString("F2")</span>
            </div>

            <p class="mt-3 text-muted">
                <strong>Estoque:</strong> @Model.Stock unidades
            </p>

            <div class="mt-4 d-flex flex-column flex-md-row gap-3">
                <button class="btn btn-primary btn-buy w-100 w-md-50">
                    Adicionar ao Carrinho
                </button>

                <a asp-controller="Products"
                   asp-action="Index"
                   class="btn btn-outline-secondary btn-buy w-100 w-md-50">
                    Voltar
                </a>
            </div>
        </div>

    </div>

    <div class="mt-4">
        <a asp-action="Index" asp-controller="Products" class="btn btn-secondary">
            Cancelar
        </a>
    </div>
</div>

</body>
</html>
