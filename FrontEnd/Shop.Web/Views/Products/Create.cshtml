@model Shop.Web.Products.Models.ProductViewModel

@{
ViewData["Title"] = "Criar Produto";
}

<h1>Criar Produto</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Products" enctype="multipart/form-data" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" type="number" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label">URL da imagem (opcional)</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="IdCategory" class="form-label"></label>
                <div class="col-md-10">
                    <select asp-for="IdCategory" class="form-control" asp-items="@ViewBag.Categorys"></select>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Criar</button>
            <a asp-action="Index" asp-controller="Products" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
