@model Shop.Web.User.Models.UserCadastro

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 18px;">

        <h2 class="text-center fw-bold mb-4">Criar Conta</h2>

        <form asp-action="Cadastro" method="post">

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control form-control-lg" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control form-control-lg" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PasswordHash" class="form-label fw-semibold">Senha</label>
                <input asp-for="PasswordHash" type="password" class="form-control form-control-lg" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                Criar conta
            </button>

            <div class="text-center">
                <a asp-action="Login" asp-controller="Auth" class="text-decoration-none fw-semibold">
                    Já tem uma conta? <span class="text-primary">Entrar</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}